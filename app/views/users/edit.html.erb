<h1>Edit user</h1>

<%= form_for :user, url: "/users/#{@user.id}", method: :patch do |f| %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name, value: @user.name %>
	</div>

	<div>
		<%= f.label :email %>
		<%= f.text_field :email, value: @user.email %>
	</div>

	<%= f.submit %>
<% end %>

<%= link_to "Back", "/" %>